<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VoiceBridge.App.SettingsPage"
             Title="Settings">
  <VerticalStackLayout Padding="20">
    <Entry Placeholder="OpenAI Key" Text="{Binding OpenAiKey}" />
    <Entry Placeholder="AI Call Sign" Text="{Binding AiCallSign}" />
    <Entry Placeholder="User Call Sign" Text="{Binding UserCallSign}" />
    <Button Text="Back to Main" Clicked="OnBackToMainClicked" HorizontalOptions="Fill" />
  </VerticalStackLayout>
</ContentPage>